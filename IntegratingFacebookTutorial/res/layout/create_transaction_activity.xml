<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="left"
        android:textColor="#62C8BD"
        android:textSize="30sp"
        android:text="@string/createTransaction"/>

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">

        <TextView
            android:id="@+id/billText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/bill"/>

        <Spinner
            android:id="@+id/groupsDropDown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/billText">
        </Spinner>

    </RelativeLayout>

    <EditText
        android:id="@+id/description"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:hint="@string/transactionDescriptionHint"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:inputType="numberDecimal"
        android:hint="@string/transactionAmountHint"/>

</LinearLayout>