<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parse.integratingfacebooktutorial"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DivvieTheme"
        android:name="com.example.kirstiebooras.DivvieApplication" >
        <activity
            android:name="com.example.kirstiebooras.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kirstiebooras.CreateGroupActivity"
            android:theme="@style/DivvieThemeSecondary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kirstiebooras.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.kirstiebooras.CreateTransactionActivity"
            android:theme="@style/DivvieThemeSecondary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kirstiebooras.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.kirstiebooras.PayChargeActivity"
            android:theme="@style/DivvieThemeSecondary" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.kirstiebooras.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.kirstiebooras.ViewTransactionActivity"
            android:theme="@style/DivvieThemeSecondary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kirstiebooras.HomeActivity" />
        </activity>
        <activity android:name="com.example.kirstiebooras.OverridePaymentActivity"
            android:theme="@style/DivvieThemeSecondary">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kirstiebooras.ViewTransactionActivity" />
        </activity>
        <activity android:name="com.example.kirstiebooras.RegisterActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name="com.example.kirstiebooras.SigninActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar"/>
        <activity android:name="com.example.kirstiebooras.SigninRegisterActivity"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name="com.example.kirstiebooras.UserDetailsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="Facebook Login" >
        </activity>
        <activity android:name="com.example.kirstiebooras.VenmoWebViewActivity" />
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id"/>
    </application>

</manifest>
